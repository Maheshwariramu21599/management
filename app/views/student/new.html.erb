<h1>insert the new student</h1>
<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
<p><%= e %></p>
<% end %>
<% end %>

<form action="/student/create" method="post">

	<p>
		<label>First name:</label>
		<input type="text" name="student[first_name]">
	</p>
	<p>
		<label>Last name:</label>
		<input type="text" name="student[last_name]">
	</p>
    <p>
		<label>Age:</label>
		<input type="text" name="student[age]">
	</p>
    <p>
		<label>Department:</label>
		<input type="text" name="student[department]">
	</p>
    <p>
		<label>Year:</label>
		<input type="text" name="student[year]">
	</p>
    
    
	 <p>
		<label>Room Number:</label>
		<%= select_tag "room_no", options_for_select(@hash1.collect{|u1| [u1[1], u1[0]] }) %>
	</p>
	<input type="submit" value="create">
</form>
<a href="/student">Home page</a>