<h1>There are <%= @count %> Students in a hostel</h1>

<table>
	<thead>
		<tr>
			<td>First name</td>
			<td>Last name</td>
            <td>Age</td>
            <td>Department</td>
            <td>Year</td>
            <td>Advisor</td>
			<td>Room</td>
			<td>Actions</td>
		</tr>
	</thead>
		<body>
			<% @Student.each do  |student| %>
			<tr>
				<td><%= student.first_name %></td>
				<td><%= student.last_name %></td>
                <td><%= student.age %></td>
				<td><%= student.department %></td>
                <td><%= student.year %></td>
				<td><%= Advisor.find(student.advisor_id).first_name %></td>
				<td><%= Room.find(student.room_id).room_no %></td>
				<td>
				<a href ="/student/<%= student.id %>">show</a>
				<a href ="/student/<%= student.id %>/edit">edit</a>
				<a href ="/student/<%= student.id %>" data-method="delete" data-confirm="Are you sure?">delete</a>
				</td>
			</tr>
			<% end %>
		</body>
	
</table>

<a href="/student/new">New student</a>
